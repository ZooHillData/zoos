{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@zoos/navigation": ["packages/navigation/src/index.ts"],
      "@zoos/navigation-ui": ["packages/navigation-ui/src/index.ts"],
      "@zoos/react-form": ["packages/react-form/src/index.ts"],
      "@zoos/react-query": ["packages/react-query/src/index.ts"],
      "@zoos/react-table": ["packages/react-table/src/index.ts"],
      "@zoos/react-table-ui": ["packages/react-table-ui/src/index.ts"],
      "@zoos/shadcn": ["packages/shadcn/src/index.ts"],
      "@zoos/zustand": ["packages/zustand/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
